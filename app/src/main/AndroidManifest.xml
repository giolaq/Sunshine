<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.laquysoft.sunshine">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.laquysoft.sunshine.MainActivity"
            android:theme="@style/ForecastTheme"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.laquysoft.sunshine.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName="com.laquysoft.sunshine.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.laquysoft.sunshine.MainActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="SettingsActivity"
            android:parentActivityName="com.laquysoft.sunshine.MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.laquysoft.sunshine.MainActivity" />
        </activity>
        <provider
            android:authorities="com.laquysoft.sunshine"
            android:name=".data.WeatherProvider" />
    </application>

</manifest>
